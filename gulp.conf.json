{
    "server": {
        "dest": "./build/server",
        "scripts": [
            "server/**/*.js"
        ],
        "tests": [
            "server/**/*.spec.js"
        ]
    },
    "client": {
        "dest": "./build/client",
        "html": [
            "./client/**/*.html"
        ],
        "less": {
            "main": "./client/app.less",
            "paths": [
                "./client/**/*"
            ],
            "dest": "./build/client/css"
        }
    }
}